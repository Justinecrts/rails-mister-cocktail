<h1>Les Cocktails</h1>
<%= link_to "Ajouter un cocktail", new_cocktail_path %>
<br><br>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=cocktail.image_url%>');">
          <div class="card-description">
            <h2><%= cocktail.name %> </h2>
          </div>
          <%= link_to "Allez voir", cocktail_path(cocktail), class: "card-link" %>
        </div>
        <br>
      </div>
    <% end %>
  </div>
</div>




